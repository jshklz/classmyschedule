{
  "manifest_version": 2,
  "name": "ClassMyCalendar",
  "version": "1.1",
  "permissions": ["activeTab", "tabs"],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}